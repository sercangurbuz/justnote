datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  id          Int        @id @default(autoincrement())
  title       String     @db.VarChar(255)
  description String
  status      NoteStatus
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum NoteStatus {
  DONE
  PENDING
}
